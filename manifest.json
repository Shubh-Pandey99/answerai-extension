{
  "manifest_version": 3,
  "name": "AI Meeting Assistant",
  "version": "2.0.0",
  "description": "Live transcription, screenshot understanding, and real-time Q&A with OpenAI/Gemini.",
  "background": { "service_worker": "background-enhanced.js" },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "tabCapture",
    "offscreen",
    "notifications",
    "contextMenus",
    "audioCapture"
  ],
  "host_permissions": [
    "http://127.0.0.1:5055/*",
    "http://localhost:5055/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.css", "icon.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
